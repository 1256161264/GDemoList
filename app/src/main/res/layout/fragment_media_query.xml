<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/openSysAlbumPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开系统相册（图片）"/>
        <Button
            android:id="@+id/openSysAlbumVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开系统相册（视频）"/>
        <Button
            android:id="@+id/openSysCameraTakePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开系统相机（拍照）"/>
        <Button
            android:id="@+id/openSysCameraTakeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开系统相机（录像）"/>
        <Button
            android:id="@+id/openCustomPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义选择图片界面"/>
        <Button
            android:id="@+id/openCustomVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义选择视频界面"/>

        <Button
            android:id="@+id/showInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#000"
                android:layout_weight="1">
                <VideoView
                    android:layout_height="match_parent"
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</layout>